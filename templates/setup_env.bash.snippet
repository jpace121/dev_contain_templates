echo "==> Clone emacs config."
buildah run --user {{ username }} $container -- git clone git://github.com/jpace121/evil-ed.git /home/{{ username }}/.emacs.d

echo "==> Configure emc and tmux."
buildah copy --chown {{ username }}:{{ user_id }} $container '{{ template_dir }}/config/tmux.conf' '/home/{{ username }}/.tmux.conf'
buildah run --user {{ username }} $container -- bash -c "echo 'alias emc='\''emacsclient -t --alternate-editor=\"\"'\''' >> ~/.bashrc"
buildah config --env TERM=xterm-256color $container

echo "==> Setting git config."
buildah copy --chown {{ username }}:{{ user_id }} $container '{{ template_dir }}/config/gitconfig' '/home/{{ username }}/.gitconfig'
